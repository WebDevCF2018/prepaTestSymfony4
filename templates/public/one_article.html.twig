{% extends 'template.html.twig' %}
{% block title %}{{ parent() }} - {{ articles.getThetitle }}{% endblock %}

{% block titre %}{{ parent() }} - {{ articles.getThetitle }}{% endblock %}
{% block stitre %}Détail de notre article {% endblock %}

{% block menu %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="{{ path("accueil") }}">Accueil
                <span class="sr-only">(current)</span>
            </a>
        </li>
        {% for itemMenu in sections %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path("detail_section",{"id":itemMenu.getIdsections}) }}">{{ itemMenu.getThetitled }}</a>
        </li>
        {% endfor %}
        <li class="nav-item"> <a class="nav-link" href="{{ path('articles_index')}}">Admin</a></li>
    </ul>
{% endblock %}

{% block contenu %}
        <h2>{{ articles.getThetitle }}</h2>
        <h3>
            {% for categ in articles.getSectionssections %}
                <a href="{{ path("detail_section",{"id":categ.getIdsections}) }}">{{ categ.getThetitled }}</a> |
            {% endfor %}
        </h3>
        <p>{{ articles.getThetext|nl2br }}</p>
        <h4>Par {{ articles.getUsersusers.getTherealname }} le {{ articles.getThedate|date("d/m/Y à H \\h i \\m") }}</h4><hr>
{% endblock %}

